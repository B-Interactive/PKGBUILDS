# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=eos-hooks
pkgver=1.12
pkgrel=2
pkgdesc='EndeavourOS pacman hooks'
arch=('any')
license=('GPL3')
url=https://github.com/endeavouros-team/PKGBUILDS/tree/master/$pkgname
_url=https://raw.githubusercontent.com/endeavouros-team/PKGBUILDS/master/$pkgname
depends=(libnotify eos-bash-shared)

source=(
  $_url/eos-os-release.hook
  $_url/eos-lsb-release.hook
  $_url/${pkgname}.hook
  $_url/${pkgname}-runner
  $_url/eos-reboot-required2
  $_url/eos-reboot-required
  $_url/eos-reboot-required.hook
)
source+=(  # Planned to be removed near the end of year 2023:
  $_url/eos-repo-before-arch-repos
  $_url/eos-repo-before-arch-repos.hook
)

